            <intent-filter android:priority="1000">
                <action android:name="android.intent.action.MEDIA_BUTTON"/>
            </intent-filter>
        </receiver>

        <receiver android:name=".receivers.NotifyReceiver">
            <intent-filter>
                <action android:name="remix.music.NOTIFY"/>
            </intent-filter>
        </receiver>

        <receiver android:name=".receivers.ExitReceiver">
            <intent-filter>
                <action android:name="remix.music.EXIT"/>
            </intent-filter>
        </receiver>

        <receiver android:name=".receivers.EQReceiver">
            <intent-filter>
                <action android:name="remix.music.SOUNDEFFECT_ACTION"/>
            </intent-filter>
        </receiver>

        <service android:name=".services.MusicService"/>
