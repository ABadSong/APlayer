        <activity android:name=".ui.dialog.TimerDialog"
            android:theme="@style/PopupCenterDialog"/>

        <activity android:name=".ui.dialog.AddPlayListDialog"
            android:theme="@style/PopupCenterDialog"/>


        <activity android:name=".ui.dialog.ShareDialog"
            android:theme="@style/PopupBottomDialog"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait" >
             <!--微博分享-->
            <intent-filter>
                <action android:name="com.sina.weibo.sdk.action.ACTION_SDK_REQ_ACTIVITY" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

