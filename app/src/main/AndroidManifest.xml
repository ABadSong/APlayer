        <meta-data android:value="56d6563367e58e6aa70005af" android:name="UMENG_APPKEY"/>
        <meta-data android:value="Umeng" android:name="UMENG_CHANNEL"/>
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/ActivityStyle">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activities.AudioHolderActivity"
            android:theme="@style/AudioHolderStyle"
            android:parentActivityName=".activities.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.MainActivity"/>
        </activity>


        <activity android:name=".activities.SearchActivity"
            android:theme="@style/ActivityStyle"/>

        <activity android:name=".activities.PlayListActivity"
            android:theme="@style/ActivityStyle">
        </activity>

        <activity android:name=".activities.ChildHolderActivity"
            android:theme="@style/ActivityStyle"/>

        <activity android:name=".activities.RecordShareActivity"/>

        <activity android:name=".activities.AboutActivity"
            android:theme="@style/ActivityStyle"/>

        <activity android:name=".activities.RecetenlyActivity"
            android:theme="@style/ActivityStyle"/>

        <activity android:name=".activities.SettingActivity"
            android:theme="@style/ActivityStyle"/>

        <activity android:name=".activities.FeedBakActivity"
            android:theme="@style/ActivityStyle"/>

        <activity android:name=".activities.ScanActivity"
            android:theme="@style/ActivityStyle"/>

        <activity android:name=".activities.EQActivity"
            android:theme="@style/ActivityStyle"/>

        <activity android:name=".activities.LockScreenActivity"
            android:theme="@style/LockScreenDialog"
            android:excludeFromRecents="true"
            android:exported="false"
            android:launchMode="singleInstance"/>

        <activity android:name=".ui.dialog.AddtoPlayListDialog"
            android:theme="@style/PopupBottomDialog"/>

        <activity android:name=".ui.dialog.PlayingListDialog"
            android:theme="@style/PopupBottomDialog"/>

        <activity android:name=".ui.dialog.OptionDialog"
            android:theme="@style/PopupBottomCompactDialog"
