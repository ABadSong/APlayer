<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/audio_holder_container"
    android:paddingTop="@dimen/activity_padding_top">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7">
            <!-- 顶部自定义actionbar、-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d60_size"
                android:id="@+id/top_actionbar">
                <ImageButton
                    android:layout_width="@dimen/d40_size"
                    android:layout_height="@dimen/d40_size"
                    android:layout_marginLeft="@dimen/d16_size"
                    android:layout_centerVertical="true"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/play_btn_back"
                    android:id="@+id/top_hide"
                    android:layout_alignParentLeft="true"/>
                <ImageButton
                    android:layout_width="@dimen/d40_size"
                    android:layout_height="@dimen/d40_size"
                    android:layout_marginRight="@dimen/d16_size"
                    android:layout_centerVertical="true"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/list_icn_more"
                    android:id="@+id/top_more"
                    android:layout_alignParentRight="true"/>
                <LinearLayout
                    android:layout_centerInParent="true"
                    android:layout_width="@dimen/d240_size"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/top_title"
                        android:text="歌曲名歌曲名"
                        android:ellipsize="end"
                        android:lines="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/s16_size"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/top_detail"
                        android:text="歌手-专辑"
                        android:ellipsize="end"
                        android:lines="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_below="@id/top_title"
                        android:textColor="#4D4D4D"
                        android:textSize="@dimen/s14_size"/>
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_below="@id/top_actionbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <!-- 中间三个页面 -->
                <remix.myplayer.ui.customview.AudioViewPager
                    android:layout_below="@id/top_actionbar"
                    android:id="@+id/holder_pager"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="10"/>
                <!--三个导航图标-->
                <RelativeLayout
                    android:layout_below="@id/holder_pager"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/play_icon_selected_dot"
                        android:id="@+id/guide_02"
                        android:layout_marginLeft="@dimen/d2_size"
                        android:layout_marginRight="@dimen/d2_size"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/guide_02"
                        android:layout_alignTop="@id/guide_02"
                        android:src="@drawable/play_icon_unselected_dot"
                        android:id="@+id/guide_01" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/guide_02"
                        android:layout_alignTop="@id/guide_02"
                        android:src="@drawable/play_icon_unselected_dot"
                        android:id="@+id/guide_03"/>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <!--已播放时间-->
            <TextView
                android:id="@+id/text_hasplay"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/s11_size"
                android:text="00:00"
                android:layout_marginLeft="@dimen/d4_size"
                android:textColor="@color/day_textcolor_primary"/>
            <SeekBar
                android:id="@+id/seekbar"
                android:maxHeight="@dimen/d2_size"
                android:progressDrawable="@drawable/bg_progress"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="wrap_content" />
            <!--剩余播放时间-->
            <TextView
                android:id="@+id/text_remain"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/s11_size"
                android:text="00:00"
                android:layout_marginRight="@dimen/d4_size"
                android:textColor="@color/day_textcolor_primary"/>
        </LinearLayout>

        <!-- 三个播放控制按钮和两个控制播放模式 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:layout_marginBottom="@dimen/d10_size">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d60_size"
                android:layout_centerVertical="true"
                android:background="@color/transparent">
                <ImageButton
                    android:layout_width="@dimen/d50_size"
                    android:layout_height="@dimen/d50_size"
                    android:id="@+id/playbar_model"
                    android:layout_alignParentLeft="true"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/play_btn_loop"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/d16_size"/>
                <ImageButton
                    android:id="@+id/playbar_play"
                    android:layout_width="@dimen/d60_size"
                    android:layout_height="@dimen/d60_size"
                    android:scaleType="center"
                    android:layout_centerInParent="true"
                    android:src="@drawable/play_btn_play"
                    android:background="?android:attr/selectableItemBackgroundBorderless"/>
                <ImageButton
                    android:id="@+id/playbar_prev"
                    android:layout_toLeftOf="@id/playbar_play"
                    android:layout_width="@dimen/d60_size"
                    android:layout_height="@dimen/d60_size"
                    android:layout_marginRight="@dimen/d16_size"
                    android:layout_centerVertical="true"
                    android:src="@drawable/play_btn_pre"
                    android:background="?android:attr/selectableItemBackgroundBorderless"/>
                <ImageButton
                    android:id="@+id/playbar_next"
                    android:layout_width="@dimen/d60_size"
                    android:layout_height="@dimen/d60_size"
                    android:layout_toRightOf="@id/playbar_play"
                    android:layout_marginLeft="16dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/play_btn_next"
                    android:background="?android:attr/selectableItemBackgroundBorderless"/>
                <ImageButton
                    android:layout_width="@dimen/d50_size"
                    android:layout_height="@dimen/d50_size"
                    android:id="@+id/playbar_playinglist"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/play_btn_normal_list"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:layout_marginRight="@dimen/d16_size"/>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>


</FrameLayout>