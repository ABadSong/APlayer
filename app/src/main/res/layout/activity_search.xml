<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color_3">

    <remix.myplayer.ui.SearchView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:id="@+id/search_view">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_search_back"
            android:background="@drawable/common_btn_back"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:onClick="onBack"/>
        <RelativeLayout
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/search_bg">
            <EditText
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|left"
                android:id="@+id/search_text"
                android:textSize="@dimen/textsize_medium"
                android:textColor="@color/text_color_blank"
                android:lines="1"
                android:ellipsize="end"
                android:hint="搜索歌曲 艺人 专辑"
                android:drawableLeft="@drawable/desk2_search"
                android:paddingLeft="8dp"
                android:imeOptions="actionSearch"
                android:dropDownHeight="300dp"
                android:dropDownWidth="match_parent"
                android:completionThreshold="1"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"
                android:id="@+id/btn_search_clear"
                android:layout_centerVertical="true"
                android:visibility="invisible"
                android:background="@drawable/actionbar_delete" />
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btn_search_go"
            android:text="搜索"
            android:textSize="@dimen/textsize_huge"
            android:textColor="@color/text_color_blank"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical" />
    </remix.myplayer.ui.SearchView>

    <!--搜索历史与搜索结果-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/search_his_container">
            <LinearLayout
                android:id="@+id/search_his_container_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ListView
                    android:id="@+id/search_history"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:choiceMode="singleChoice"
                    android:divider="@color/list_divider"
                    android:dividerHeight="1px"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/search_history_clear"
                    android:text="清空搜索历史"
                    android:textSize="@dimen/textsize_medium"
                    android:textColor="@color/text_color_blank"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>
            <TextView
                android:id="@+id/search_history_blank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:text="无搜索历史"
                android:textColor="@color/text_color_blank"
                android:textSize="22dp"/>
        </FrameLayout>


        <FrameLayout
            android:id="@+id/search_result_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/search_result_native"
                android:divider="@color/list_divider"
                android:dividerHeight="1px"/>
            <TextView
                android:id="@+id/search_result_blank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:text="无搜索结果"
                android:textSize="22dp"
                android:textColor="@color/text_color_blank"/>
        </FrameLayout>

    </FrameLayout>

</LinearLayout>