<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp">
    <ImageView
        android:id="@+id/notify_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/default_recommend"/>

    <RelativeLayout
        android:id="@+id/notify_container"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@id/notify_image"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true">
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_alignParentTop="true">
            <TextView
                android:id="@+id/notify_song"
                android:text="歌曲名"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:lines="1"
                android:ellipsize="end"
                android:textColor="@color/text_color_blank"
                android:textSize="@dimen/textsize_large"
                android:layout_centerVertical="true"
                android:layout_marginBottom="5dp"/>
            <TextView
                android:id="@+id/notify_artist"
                android:text="歌手名-专辑"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:lines="1"
                android:ellipsize="end"
                android:layout_centerVertical="true"
                android:textSize="@dimen/textsize_medium"
                android:textColor="@color/text_color_gray"/>
        </LinearLayout>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/notify_close"
            android:src="@drawable/search_history_btn_del"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@id/notify_image"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true">
        <ImageButton
            android:id="@+id/notify_play"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/transparent"
            android:src="@drawable/notifbar_btn_play" />
        <ImageButton
            android:id="@+id/notify_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:layout_toRightOf="@id/notify_play"
            android:layout_centerVertical="true"
            android:src="@drawable/notifbar_btn_normal_next"/>
        <ImageButton
            android:id="@+id/notify_prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/notify_play"
            android:background="@color/transparent"
            android:layout_centerVertical="true"
            android:src="@drawable/notifbar_btn_normal_prev"/>


    </RelativeLayout>

</RelativeLayout>