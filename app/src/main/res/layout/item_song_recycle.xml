<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_height"
    android:id="@+id/item_root"
    android:background="?attr/background_list">
    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/song_head_image"
        fresco:actualImageScaleType="centerCrop"
        fresco:placeholderImageScaleType="centerCrop"
        fresco:placeholderImage="@drawable/song_artist_empty_bg"
        fresco:failureImage="@drawable/song_artist_empty_bg"
        fresco:failureImageScaleType="centerCrop"
        fresco:roundAsCircle="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"/>
    <!--歌曲名、歌手、专辑-->
    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="@dimen/item_height"
        android:layout_toRightOf="@id/song_head_image"
        android:layout_marginLeft="16dp"
        android:orientation="vertical"
        android:id="@+id/song_text_container">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:ellipsize="end"
            android:textSize="@dimen/s14_size"
            android:textColor="?attr/text_color_primary"
            android:id="@+id/song_title"
            android:layout_marginTop="16dp"
            android:text="歌曲名" />
        <TextView
            android:id="@+id/song_other"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:ellipsize="end"
            android:textSize="@dimen/s12_size"
            android:textColor="?attr/text_color"
            android:text="歌手与专辑"
            android:layout_marginTop="4dp"/>
    </LinearLayout>
    <!--结尾处按钮-->
    <ImageButton
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:id="@+id/song_button"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:src="@drawable/list_icn_more"
        android:background="@drawable/bg_common_ripple"/>

    <remix.myplayer.ui.customview.ColumnView
        android:layout_centerVertical="true"
        android:layout_width="18dp"
        android:layout_height="16dp"
        app:columnwidth="2dp"
        app:columncolor="#782899"
        app:columnnum="4"
        android:id="@+id/song_columnview"
        android:layout_toRightOf="@id/song_text_container"
        android:layout_marginLeft="16dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/list_divider"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
