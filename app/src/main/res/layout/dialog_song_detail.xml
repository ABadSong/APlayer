<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="歌曲名"
        android:textColor="@color/black_80000000"
        android:textSize="@dimen/s14_size" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="1111.mp3"
        android:textColor="@color/black"
        android:textSize="@dimen/s14_size"
        android:layout_marginLeft="@dimen/d4_size"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="歌曲名"
        android:textColor="@color/black_80000000"
        android:textSize="@dimen/s14_size" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/d4_size"
        android:layout_marginTop="@dimen/d18_size"
        android:id="@+id/song_layout"
        android:hint="请输入歌曲名">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/song_edt"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/d4_size"
        android:layout_marginTop="@dimen/d18_size"
        android:id="@+id/album_layout"
        android:hint="请输入专辑">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/album_edt"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/d4_size"
        android:layout_marginTop="@dimen/d18_size"
        android:id="@+id/artist_layout"
        android:hint="请输入艺术家">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/artist_edt"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/d4_size"
        android:layout_marginTop="@dimen/d18_size"
        android:id="@+id/year_layout"
        android:hint="请输入年代">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/year_edt"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/d4_size"
        android:layout_marginTop="@dimen/d18_size"
        android:id="@+id/genre_layout"
        android:hint="请输入流派">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/genre_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>

</LinearLayout>