<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/top_actionbar"/>

    <!-- CustonTab -->
    <!--<com.viewpagerindicator.TabPageIndicator-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="@dimen/tab_height"-->
        <!--android:id="@+id/tab_indicator"/>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_height"
        android:orientation="horizontal"
        android:background="#fff"
        android:gravity="center_vertical|center_horizontal">
        <TextView
            android:id="@+id/tab_song"
            style="@style/CustomTab"
            android:text="@string/tab_song"/>
        <TextView
            android:id="@+id/tab_album"
            style="@style/CustomTab"
            android:text="@string/tab_album"/>
        <TextView
            android:id="@+id/tab_artist"
            style="@style/CustomTab"
            android:text="@string/tab_artist"/>
        <TextView
            android:id="@+id/tab_playlist"
            style="@style/CustomTab"
            android:text="@string/tab_dir"/>
    </LinearLayout>
    <!-- Tab分割线-->
    <ImageView
        android:id="@+id/tab_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/indicator"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/line"/>
    <!--中间四个fragment-->
    <remix.myplayer.ui.MyPager
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:background="#fff"
        android:id="@+id/ViewPager" />

    <!--
    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:id="@+id/ViewPager" />
        -->
</LinearLayout>