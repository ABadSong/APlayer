<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp">
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="4dp"
        android:layout_centerVertical="true"
        android:id="@+id/artist_album_item_image"
        android:src="@drawable/default_album_list"/>
    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_toRightOf="@id/artist_album_item_image"
        android:layout_marginLeft="5dp"
        android:gravity="center_vertical"
        android:layout_centerVertical="true">
        <TextView
            android:id="@+id/artist_album_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#050505"
            android:textSize="17dp"
            android:lines="1"
            android:ellipsize="end"
            android:text="未知专辑"/>
        <TextView
            android:id="@+id/artist_album_item_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#30000000"
            android:textSize="12dp"
            android:text="0首"/>
    </LinearLayout>
    <ImageView
        android:layout_centerVertical="true"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/img_arrow_right"
        android:layout_marginRight="8dp"/>
</RelativeLayout>