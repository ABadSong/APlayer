<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/material_color_primary"
            app:layout_scrollFlags="scroll|enterAlways" />
    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/background_color_3">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/setting_common_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/common"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="@dimen/d14_size"
                    android:textSize="@dimen/s16_size"
                    android:textColor="?attr/material_color_secondry" />
                <RelativeLayout
                    android:id="@+id/setting_filter_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/setting_common_title"
                    android:paddingTop="@dimen/d10_size"
                    android:paddingBottom="@dimen/d10_size"
                    android:background="?attr/background_common">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/d16_size">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/music_filter"
                            android:textColor="?attr/text_color_primary"
                            android:textSize="@dimen/s16_size"
                            android:layout_marginBottom="@dimen/d2_size"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/set_filter_size"
                            android:textColor="?attr/text_color"
                            android:textSize="@dimen/s14_size"/>
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/setting_lrc_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/setting_filter_container"
                    android:paddingTop="@dimen/d10_size"
                    android:paddingBottom="@dimen/d10_size"
                    android:background="?attr/background_common">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/d16_size"
                        android:layout_marginRight="@dimen/d16_size">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/lrc_scan"
                            android:textColor="?attr/text_color_primary"
                            android:textSize="@dimen/s16_size"
                            android:layout_marginBottom="@dimen/d2_size"/>
                        <TextView
                            android:id="@+id/setting_lrc_path"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/default_lrc_path"
                            android:textColor="?attr/text_color"
                            android:textSize="@dimen/s14_size"/>
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/setting_lockscreen_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/setting_lrc_container"
                    android:paddingTop="@dimen/d10_size"
                    android:paddingBottom="@dimen/d10_size"
                    android:background="?attr/background_common">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/d16_size"
                        android:layout_marginRight="@dimen/d16_size">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/lockscreen_show"
                            android:textColor="?attr/text_color_primary"
                            android:textSize="@dimen/s16_size"
                            android:layout_marginBottom="@dimen/d2_size"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/lockscreen_is_show"
                            android:textColor="?attr/text_color"
                            android:textSize="@dimen/s14_size"/>
                    </LinearLayout>
                    <android.support.v7.widget.SwitchCompat
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textOn=""
                        android:textOff=""
                        android:id="@+id/setting_lockscreen_switch"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="@dimen/d14_size"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/setting_navigation_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/setting_lockscreen_container"
                    android:paddingTop="@dimen/d10_size"
                    android:paddingBottom="@dimen/d10_size"
                    android:background="?attr/background_common">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/d16_size"
                        android:layout_marginRight="@dimen/d16_size">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/navigation_color"
                            android:textColor="?attr/text_color_primary"
                            android:textSize="@dimen/s16_size"
                            android:layout_marginBottom="@dimen/d2_size"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/navigation_is_show"
                            android:textColor="?attr/text_color"
                            android:textSize="@dimen/s14_size"/>
                    </LinearLayout>
                    <android.support.v7.widget.SwitchCompat
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textOn=""
                        android:textOff=""
                        android:id="@+id/setting_navaigation_switch"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="@dimen/d14_size"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/setting_shake_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/setting_navigation_container"
                    android:paddingTop="@dimen/d10_size"
                    android:paddingBottom="@dimen/d10_size"
                    android:background="?attr/background_common">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/d16_size"
                        android:layout_marginRight="@dimen/d16_size">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/shake"
                            android:textColor="?attr/text_color_primary"
                            android:textSize="@dimen/s16_size"
                            android:layout_marginBottom="@dimen/d2_size"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/shake_tip"
                            android:textColor="?attr/text_color"
                            android:textSize="@dimen/s14_size"/>
                    </LinearLayout>
                    <android.support.v7.widget.SwitchCompat
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textOn=""
                        android:textOff=""
                        android:id="@+id/setting_shake_switch"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="@dimen/d14_size"/>
                </RelativeLayout>

                <View
                    android:id="@+id/setting_divider_1"
                    android:layout_below="@id/setting_shake_container"
                    android:layout_width="match_parent"
                    android:layout_height="1px" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/setting_color_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/color"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="@dimen/d14_size"
                    android:textSize="@dimen/s16_size"
                    android:textColor="?attr/material_color_secondry" />
                <RelativeLayout
                    android:id="@+id/setting_color_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/setting_color_title"
                    android:paddingTop="@dimen/d10_size"
                    android:paddingBottom="@dimen/d10_size"
                    android:background="?attr/background_common">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/d16_size">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/theme_color"
                            android:textColor="?attr/text_color_primary"
                            android:textSize="@dimen/s16_size"
                            android:layout_marginBottom="@dimen/d2_size"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/theme_color_info"
                            android:textColor="?attr/text_color"
                            android:textSize="@dimen/s14_size"/>
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/setting_color_src"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/bg_circle_small"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/d14_size"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/setting_notify_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/setting_color_container"
                    android:paddingTop="@dimen/d10_size"
                    android:paddingBottom="@dimen/d10_size"
                    android:background="?attr/background_common">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/d16_size">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/notify_bg_color"
                            android:textColor="?attr/text_color_primary"
                            android:textSize="@dimen/s16_size"
                            android:layout_marginBottom="@dimen/d2_size"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/notify_bg_color_info"
                            android:textColor="?attr/text_color"
                            android:textSize="@dimen/s14_size"/>
                    </LinearLayout>
                </RelativeLayout>

                <View
                    android:id="@+id/setting_divider_2"
                    android:layout_below="@id/setting_notify_container"
                    android:layout_width="match_parent"
                    android:layout_height="1px" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/setting_other_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/other"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="@dimen/d14_size"
                    android:textSize="@dimen/s16_size"
                    android:textColor="?attr/material_color_secondry" />
                <RelativeLayout
                    android:id="@+id/setting_eq_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/setting_other_title"
                    android:paddingTop="@dimen/d14_size"
                    android:paddingBottom="@dimen/d14_size"
                    android:background="?attr/background_common">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/eq_setting"
                        android:textSize="@dimen/s16_size"
                        android:textColor="?attr/text_color_primary"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/d16_size"/>
                    <ImageView
                        android:id="@+id/setting_eq_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/arrow_right"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/d14_size"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/setting_feedback_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/setting_eq_container"
                    android:paddingTop="@dimen/d14_size"
                    android:paddingBottom="@dimen/d14_size"
                    android:background="?attr/background_common">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/feedback_info"
                        android:textSize="@dimen/s16_size"
                        android:textColor="?attr/text_color_primary"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/d16_size"/>
                    <ImageView
                        android:id="@+id/setting_feedback_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/arrow_right"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/d14_size"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/setting_about_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/setting_feedback_container"
                    android:paddingTop="@dimen/d14_size"
                    android:paddingBottom="@dimen/d14_size"
                    android:background="?attr/background_common">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/about_info"
                        android:textSize="@dimen/s16_size"
                        android:textColor="?attr/text_color_primary"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/d16_size"/>
                    <ImageView
                        android:id="@+id/setting_about_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/arrow_right"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/d14_size"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/setting_update_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/setting_about_container"
                    android:paddingTop="@dimen/d14_size"
                    android:paddingBottom="@dimen/d14_size"
                    android:background="?attr/background_common">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/check_update"
                        android:textSize="@dimen/s16_size"
                        android:textColor="?attr/text_color_primary"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/d16_size"/>
                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/setting_update_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/arrow_right"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/d14_size"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/setting_donate_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/setting_update_container"
                    android:paddingTop="@dimen/d14_size"
                    android:paddingBottom="@dimen/d14_size"
                    android:background="?attr/background_common">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/donate"
                        android:textSize="@dimen/s16_size"
                        android:textColor="?attr/text_color_primary"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/d16_size"/>
                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/setting_donate_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/arrow_right"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/d14_size"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/setting_clear_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/setting_donate_container"
                    android:paddingTop="@dimen/d14_size"
                    android:paddingBottom="@dimen/d14_size"
                    android:background="?attr/background_common">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/clear_cache"
                        android:textSize="@dimen/s16_size"
                        android:textColor="?attr/text_color_primary"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/d16_size"/>
                    <TextView
                        android:id="@+id/setting_clear_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/s14_size"
                        android:textColor="?attr/text_color_primary"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/d14_size"/>
                </RelativeLayout>

                <View
                    android:id="@+id/setting_divider_3"
                    android:layout_below="@id/setting_clear_container"
                    android:layout_width="match_parent"
                    android:layout_height="1px" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>