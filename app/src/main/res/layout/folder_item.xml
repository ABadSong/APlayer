<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="56dp"
    android:gravity="center_vertical">
    <ImageView
        android:id="@+id/folder_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/scan_icn_folder"
        android:layout_margin="15dp"/>
    <LinearLayout
        android:layout_toRightOf="@id/folder_image"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:id="@+id/folder_name"
            android:textSize="12dp"
            android:textColor="#1c1b19"
            android:text="文件夹名"/>
        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:lines="1"
            android:ellipsize="start"
            android:id="@+id/folder_path"
            android:textSize="10dp"
            android:text="路径"
            android:textColor="#6d6c69"/>
    </LinearLayout>
    <ImageView
        android:layout_alignParentRight="true"
        android:layout_marginRight="18dp"
        android:id="@+id/folder_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:scaleType="center"
        android:src="@drawable/list_icn_more"
        android:background="@drawable/bg_btn_gray_selector"/>
    <TextView
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="22dp"
        android:layout_marginRight="18dp"
        android:layout_toLeftOf="@id/folder_button"
        android:id="@+id/folder_num"
        android:textSize="12dp"
        android:text="__首"
        android:textColor="#1c1b19"/>
</RelativeLayout>