<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolbar_multi"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:visibility="gone">

    <ImageButton
        android:id="@+id/multi_playlist"
        android:layout_width="@dimen/d56_size"
        android:layout_height="match_parent"
        android:src="@drawable/btn_tip_playlist"
        android:background="?attr/background_common"
        android:layout_centerInParent="true"/>

    <ImageButton
        android:id="@+id/multi_playqueue"
        android:layout_width="@dimen/d56_size"
        android:layout_height="match_parent"
        android:src="@drawable/btn_tip_playqueue"
        android:background="?attr/background_common"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/d36_size"
        android:layout_centerVertical="true"/>


    <ImageButton
        android:id="@+id/multi_delete"
        android:layout_width="@dimen/d56_size"
        android:layout_height="match_parent"
        android:src="@drawable/btn_tip_delete"
        android:background="?attr/background_common"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/d36_size"
        android:layout_centerVertical="true"/>


    <ImageButton
        android:id="@+id/multi_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_tip_close"
        android:background="@color/transparent"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/d6_size"
        android:layout_centerVertical="true"/>

    <ImageView
        android:id="@+id/multi_divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="?attr/background_color_main"
        android:alpha="50"/>
</RelativeLayout>