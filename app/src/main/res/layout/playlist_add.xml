<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/createlist_bg">
    <TextView
        android:layout_gravity="center"
        android:textColor="#1b1c19"
        android:textSize="@dimen/textsize_large"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="创建播放列表"/>
    <EditText
        android:id="@+id/playlist_add_edit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="18dp"
        android:textCursorDrawable="@drawable/bg_cursor_purple"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="right"
        android:layout_marginTop="40dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:id="@+id/playlist_cancel"
            android:textSize="16dp"
            android:layout_marginRight="24dp"
            android:text="取消"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:id="@+id/playlist_continue"
            android:textSize="16dp"
            android:textColor="@color/progress_complete"
            android:layout_marginRight="16dp"
            android:text="继续"/>
    </LinearLayout>
</LinearLayout>