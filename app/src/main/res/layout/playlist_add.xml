<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="254dp"
    android:layout_height="180dp"
    android:background="#fff">
    <TextView
        android:layout_gravity="center"
        android:textSize="18dp"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="创建播放列表"/>
    <EditText
        android:id="@+id/playlist_add_edit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textCursorDrawable="@drawable/playlist_add_cursor"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="bottom|right"
        android:paddingRight="20dp"
        android:paddingBottom="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/playlist_cancel"
            android:textSize="16dp"
            android:layout_marginRight="10dp"
            android:text="取消"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/playlist_continue"
            android:textSize="16dp"
            android:textColor="@color/progress_complete"
            android:text="继续"/>
    </LinearLayout>
</LinearLayout>