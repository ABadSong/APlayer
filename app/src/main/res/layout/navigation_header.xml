<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="@dimen/d264_size"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="?attr/material_color_primary">

    <ImageView
        android:id="@+id/header_img"
        android:layout_marginTop="@dimen/d20_size"
        android:layout_width="108dp"
        android:layout_height="108dp"
        android:paddingTop="@dimen/d2_size"
        android:paddingLeft="@dimen/d4_size"
        android:paddingRight="@dimen/d4_size"
        android:paddingBottom="@dimen/d6_size"
        android:scaleType="centerCrop"
        android:src="@drawable/album_empty_bg_day"
        android:background="@color/transparent"/>

    <TextView
        android:visibility="visible"
        android:id="@+id/header_txt"
        android:layout_margin="@dimen/d20_size"
        android:paddingLeft="@dimen/d8_size"
        android:paddingRight="@dimen/d8_size"
        android:layout_width="@dimen/d170_size"
        android:layout_height="@dimen/d32_size"
        android:textColor="@color/white"
        android:textSize="@dimen/s14_size"
        android:text="正在播放"
        android:gravity="center"
        android:lines="1"
        android:ellipsize="end" />
</LinearLayout>