<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp">
    <ImageView
        android:id="@+id/notify_image"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:layout_marginLeft="12dp"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:src="@drawable/default_recommend"/>
    <LinearLayout
        android:id="@+id/notify_container"
        android:layout_marginLeft="16dp"
        android:gravity="center_vertical"
        android:layout_toRightOf="@id/notify_image"
        android:orientation="vertical"
        android:layout_width="120dp"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/notify_song"
            android:text="歌曲名"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="#fff"
            android:textSize="17dp"/>
        <TextView
            android:id="@+id/notify_artist"
            android:text="歌手名"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:ellipsize="end"
            android:textSize="15dp"
            android:textColor="#fff"/>
    </LinearLayout>
    <ImageButton
        android:id="@+id/notify_next"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:layout_marginRight="10dp"
        android:src="@drawable/notifbar_btn_pre_next"/>
    <!--分割线-->
    <!--<LinearLayout-->
        <!--android:orientation="vertical"-->
        <!--android:id="@+id/notify_divier"-->
        <!--android:layout_width="1dp"-->
        <!--android:layout_height="30dp"-->
        <!--android:background="@color/divider"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:layout_toLeftOf="@id/notify_next"-->
        <!--android:layout_marginLeft="10dp"-->
        <!--android:layout_marginRight="10dp"/>-->
    <ImageButton
        android:id="@+id/notify_play"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/notify_next"
        android:layout_marginRight="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:src="@drawable/notifbar_btn_play" />
</RelativeLayout>