<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar"/>

    <RelativeLayout
        android:id="@+id/recently_shuffle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d38_size"
        android:background="@color/night_interval_color"
        android:orientation="horizontal"
        android:onClick="onPlayShuffle">
        <ImageButton
            android:id="@+id/play_shuffle_button"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/common_btn_normal_shuffle"
            android:background="@color/transparent"
            android:layout_marginLeft="@dimen/d16_size" />
        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/play_random"
            android:layout_marginLeft="@dimen/d72_size"/>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:background="?attr/background_color_3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>