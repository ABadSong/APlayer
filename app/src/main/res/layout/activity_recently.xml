<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/material_color_primary">
        <include layout="@layout/toolbar"/>
        <include layout="@layout/toolbar_multi"/>
    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:id="@+id/recently_shuffle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d48_size"
        android:background="?attr/background_color_main"
        android:orientation="horizontal"
        android:onClick="onPlayShuffle">
        <ImageButton
            android:id="@+id/play_shuffle_button"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_shuffle"
            android:background="@color/transparent"
            android:layout_marginLeft="@dimen/d16_size" />
        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/default_textview_color"
            android:text="@string/play_random"
            android:layout_marginLeft="@dimen/d72_size"/>
        <ImageView
            android:id="@+id/divider"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="?attr/divider_color"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/d1_size"
        android:background="?attr/divider_color"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:background="?attr/background_color_3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>